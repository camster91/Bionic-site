<%- include('partials/header') %>

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>Contact Us</h1>
        <p>Get in touch with our team to discuss your manufacturing needs</p>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section">
    <div class="container">
        <div class="contact-grid">
            <!-- Contact Form -->
            <div class="contact-form-container">
                <% if (messageSent) { %>
                <div class="success-message">
                    <div class="success-icon">&#10003;</div>
                    <h3>Message Sent!</h3>
                    <p>Thank you for contacting Botanic. We've received your inquiry and will respond within 1-2 business days.</p>
                    <a href="/" class="btn btn-primary">Return Home</a>
                </div>
                <% } else { %>
                <h2>Send Us a Message</h2>
                <p>Fill out the form below and we'll get back to you promptly.</p>
                <form class="contact-form" action="/contact" method="POST">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">Your Name *</label>
                            <input type="text" id="name" name="name" required placeholder="John Doe">
                        </div>
                        <div class="form-group">
                            <label for="company">Company Name</label>
                            <input type="text" id="company" name="company" placeholder="Your Company">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="email">Email Address *</label>
                            <input type="email" id="email" name="email" required placeholder="john@example.com">
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" name="phone" placeholder="(555) 123-4567">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inquiryType">Inquiry Type *</label>
                        <select id="inquiryType" name="inquiryType" required>
                            <option value="">Select an option</option>
                            <option value="sales">Sales / Quote Request</option>
                            <option value="general">General Questions</option>
                            <option value="partnership">Partnership Opportunities</option>
                            <option value="existing-client">Existing Client Inquiry</option>
                            <option value="careers">Career Opportunities</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message">Your Message *</label>
                        <textarea id="message" name="message" rows="5" required placeholder="Please provide details about your project or inquiry..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Send Message</button>
                </form>
                <% } %>
            </div>

            <!-- Contact Info -->
            <div class="contact-info">
                <div class="info-card">
                    <h3>Get in Touch</h3>
                    <p>We're here to answer your questions about contract manufacturing.</p>

                    <div class="info-item">
                        <span class="info-icon">&#128231;</span>
                        <div>
                            <strong>Email</strong>
                            <p>info@botanic-mfg.com</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-icon">&#128222;</span>
                        <div>
                            <strong>Phone</strong>
                            <p>(770) 555-0123</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-icon">&#128205;</span>
                        <div>
                            <strong>Location</strong>
                            <p>Carroll County, Georgia</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-icon">&#128336;</span>
                        <div>
                            <strong>Business Hours</strong>
                            <p>Monday - Friday: 8am - 5pm EST<br>
                            Saturday - Sunday: Closed</p>
                        </div>
                    </div>
                </div>

                <div class="info-card highlight">
                    <h3>Existing Clients</h3>
                    <p>Access your client portal to submit purchase orders and track your projects.</p>
                    <a href="/portal/login" class="btn btn-secondary">Client Portal</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="map-section">
    <div class="container">
        <div class="map-placeholder">
            <div class="map-content">
                <span class="map-icon">&#128205;</span>
                <h3>Carroll County, Georgia</h3>
                <p>Our manufacturing facility is located in Carroll County, Georgia, strategically positioned to serve clients across the Southeast and beyond.</p>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
